{% extends '@user/authentication/base.twig' %}

{% block title %}{{ app.name }} - {{ lang('page-title.reset-password') }}{% endblock %}

{% block body %}
<body class="hold-transition login-page">
	<div class="login-box">
		<div class="card card-outline card-primary">
			<div class="card-header text-center">
				<a href="/" class="h1"><b>{{ app.name }}</b></a>
			</div>
			<div class="card-body">
				<p class="login-box-msg">{{ lang('authentication.header-message.reset-password') }}</p>
				<form id="recover-account">
					<div class="input-group mb-3">
						<input type="password" class="form-control" placeholder="{{ lang('authentication.form-placeholder.new-password') }}">
					</div>
					<div class="input-group mb-3">
						<input type="password" class="form-control" placeholder="{{ lang('authentication.form-placeholder.repeat-new-password') }}">
					</div>
					<div class="row">
						<div class="col-12">
							<button type="submit" class="btn btn-primary btn-block">{{ lang('authentication.button.recover-account.reset-password') }}</button>
						</div>
					</div>
				</form>
				<p class="mt-3 mb-1">
					<a href="sign-in">{{ lang('authentication.text-link.sign-in') }}</a>
				</p>
			</div>
		</div>
	</div>
</body>
{% endblock %}
