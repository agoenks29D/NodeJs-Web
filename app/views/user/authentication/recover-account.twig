{% extends '@user/authentication/base.twig' %}

{% block title %}{{ app.name }} - {{ lang('recovery-account') }}{% endblock %}

{% block body %}
<body class="hold-transition login-page">
	<div class="login-box">
		<div class="card card-outline card-primary">
			<div class="card-header text-center">
				<a href="/" class="h1"><b>{{ app.name }}</b></a>
			</div>
			<div class="card-body">
				<p class="login-box-msg">{{ lang('text-message.header.recover-account') }}</p>
				<form id="recover-account">
					<div class="input-group mb-3">
						<input type="email" class="form-control" placeholder="{{ lang('placeholder.email-or-username') }}">
						<div class="input-group-append">
							<div class="input-group-text">
								<span class="fas fa-envelope"></span>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-12">
							<button type="submit" class="btn btn-primary btn-block">{{ lang('button.text.recover-account.request-new-password') }}</button>
						</div>
					</div>
				</form>
				<p class="mt-3 mb-1">
					<a href="sign-in">{{ lang('text-link.sign-in') }}</a>
				</p>
			</div>
		</div>
	</div>
</body>
{% endblock %}
