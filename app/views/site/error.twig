{% extends '@site/base.twig' %}

{% block title %}
	{% if title is defined %}
			{{ title }}
		{% else %}
			{{ app.name }} - {{ page_attributes.name }}
	{% endif %}
{% endblock %}

{% block content %}
<div class="container">
	<div class="starter-template">
		<h1>{{ error.status }}</h1>
		<p class="lead">{{ error.message }}</p>
	</div>
</div>
{% endblock %}